#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/labels.h>
#include <dt-bindings/zmk/hid_usage.h>
#include <dt-bindings/zmk/hid_usage_pages.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                // ... other key bindings ...
                &kp C_MUTE  // Assign the mute keycode to the encoder's push button position
                // ... other key bindings ...
            >;
        };

        // ... other layers if needed ...
    };

    // This section is for the encoder rotation configuration
    sensors {
        compatible = "zmk,keymap-sensors";
        sensor-bindings = <
            // Binds the first encoder to Volume Up (clockwise) and Volume Down (counter-clockwise)
            &inc_dec_kp C_VOL_UP C_VOL_DN
            // Add more bindings here for additional encoders if necessary
        >;
    };
};
